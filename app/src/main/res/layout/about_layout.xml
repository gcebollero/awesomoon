<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/space_apps_logo"/>
    <TextView
        android:layout_below="@id/space_apps_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="60dp"
        android:text="Developed with "
        android:id="@+id/about_head" />
    <ImageButton
        android:layout_below="@id/space_apps_logo"
        android:id="@+id/love"
        android:src="@drawable/ic_favorite_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tint="@android:color/holo_red_light"
        android:background="@android:color/transparent"
        android:layout_toRightOf="@+id/about_head"/>
    <TextView
        android:layout_below="@id/space_apps_logo"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" in Zaragoza"
        android:layout_toRightOf="@id/love"
        android:id="@+id/textView6" />
    <TextView
        android:layout_marginLeft="60dp"
        android:layout_width="wrap_content"
        android:layout_below="@id/love"
        android:id="@+id/dani"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Daniel Cabrera"/>
    <TextView
        android:layout_marginLeft="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cebo"
        android:layout_below="@id/dani"
        android:layout_gravity="center_horizontal"
        android:text="Guillermo Cebollero"/>
    <TextView
        android:layout_marginLeft="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/alba"
        android:layout_below="@id/cebo"
        android:layout_gravity="center_horizontal"
        android:text="Alba Clemente"/>
    <TextView
        android:layout_marginLeft="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eduardo"
        android:layout_below="@id/alba"
        android:layout_gravity="center_horizontal"
        android:text="Eduardo Lacasa"/>
    <TextView
        android:layout_marginLeft="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pedro"
        android:layout_below="@id/eduardo"
        android:layout_gravity="center_horizontal"
        android:text="Pedro Rivas"/>
    <TextView
        android:layout_marginLeft="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/javier"
        android:layout_below="@id/pedro"
        android:layout_gravity="center_horizontal"
        android:text="Javier Gallo"/>

    <TextView
        android:layout_marginLeft="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_gravity="center_horizontal"
        android:text="The images of the moon have been obtained from NASA"
        android:layout_below="@+id/javier"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp" />

    <TextView
        android:layout_marginLeft="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_gravity="center_horizontal"
        android:text="avesomoon.com"
        android:layout_below="@+id/textView3"

        android:textColor="@color/abc_primary_text_material_light"
        android:layout_alignStart="@+id/textView3"
        android:layout_alignEnd="@+id/icon_awesomoon" />

    <TextView
        android:layout_marginLeft="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_gravity="center|right"
        android:text="avesomoon.club"
        android:layout_above="@+id/icon_twiter"
        android:layout_toEndOf="@+id/icon_twiter"
        android:textColor="@color/abc_primary_text_material_light"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/icon_google"
        android:src="@drawable/icon_google"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@android:color/transparent"
        android:longClickable="false"
        android:adjustViewBounds="false"
        android:layout_below="@+id/textView4"
        android:layout_toStartOf="@+id/icon_twiter"
        android:layout_centerHorizontal="true" />/>

    <ImageButton
        android:id="@+id/icon_facebook"
        android:src="@drawable/icon_facebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:longClickable="false"
        android:adjustViewBounds="false"
        android:layout_alignTop="@+id/icon_google"
        android:layout_toStartOf="@+id/icon_google"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/icon_twiter"
        android:src="@drawable/icon_twiter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@android:color/transparent"
        android:longClickable="false"
        android:adjustViewBounds="false"
        android:layout_alignTop="@+id/icon_google"
        android:layout_toStartOf="@+id/icon_awesomoon"
        android:layout_centerHorizontal="true" />
    <ImageButton
        android:id="@+id/icon_awesomoon"
        android:src="@drawable/icon_awesomoon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:longClickable="false"
        android:adjustViewBounds="false"
        android:layout_alignTop="@+id/icon_twiter"
        android:layout_centerHorizontal="true" />

</RelativeLayout>