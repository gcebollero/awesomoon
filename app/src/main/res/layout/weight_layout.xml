<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Insert your weight:"
        android:textSize="20dp"
        android:id="@+id/insertw" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/editW"
        android:inputType="numberDecimal"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="65dp"
        android:textSize="20dp"
        android:scrollbars = "vertical"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="  Kg"
        android:textSize="20dp"
        android:layout_toRightOf="@+id/editW"
        android:id="@+id/textKg" />

    <Button
        android:id="@+id/btw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editW"
        android:layout_centerHorizontal="true"
        android:onClick="onCreateView"
        android:text="Calculate" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Your weight in the Moon is:"
        android:layout_marginTop="200dp"
        android:id="@+id/weightmoon" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginTop="240dp"
        android:id="@+id/resultw" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        android:text="  Kg"
        android:textSize="20dp"
        android:layout_toRightOf="@+id/editW"
        android:id="@+id/textKgMoon" />

</RelativeLayout>